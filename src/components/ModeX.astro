---
import Section from "../components/Section.astro";
---

<Section
    title="Model X"
    subtitle="Explorar inventario"
    subtitleTag="a"
    color="black"
    decoration="decoration-black"
>
    <div slot="footer" class="gap-x-6 flex  mx-auto">
        <a
            class="border-[3px] border-gray-600 bg-gray-600 text-sm rounded font-medium text-white px-12 py-2 inline-block hover:border-gray-500 hover:bg-gray-500 transition-colors"
            href="#">Explorar inventario</a
        >
        <a
            class="border-[3px] border-white rounded text-sm font-medium text-black px-12 py-2 inline-block bg-white hover:bg-black hover:text-white hover:border-black transition-colors"
            href="#">Pedido personalizado</a
        >
    </div>
    <img
        slot="background"
        src="/model-y.avif"
        alt="Model Y"
        class="h-full w-full object-cover object-center"
    />
</Section>

